# Minimal .htaccess - Test if this works
# Remove all other directives to isolate PHP issue

# Force HTTPS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Allow API to pass through (don't rewrite to index.html)
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule . - [L]

# React Router - only if file doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.html [L]

# PHP Handler - Try multiple methods
AddHandler php8.4-script .php
AddHandler application/x-httpd-php .php
AddType application/x-httpd-php .php

